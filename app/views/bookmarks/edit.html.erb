<h1>Edit Bookmark</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for [@topic, @bookmark] do |f| %>
       <div class="form-group">
         <%= f.label :url %>
         <%= f.text_field :url %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>