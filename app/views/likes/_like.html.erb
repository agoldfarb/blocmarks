<% if policy(Like.new).create? %>
  <div class="like">
    <% if like = current_user.liked(bookmark) %>
      <%= link_to [topic, bookmark, like], method: :delete do %> 
      Unlike
      <% end %>
    <% else %>
      <%= link_to [topic, bookmark, Like.new], method: :post do %>
      Like
      <% end %>
    <% end %>
  </div>
<% end %>